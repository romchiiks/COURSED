<Window x:Class="kyrsa4.PassRecovery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kyrsa4"
        mc:Ignorable="d"
        Title="PassRecovery" Height="200" Width="300">
    <Grid Background="#3c3c3c">
        <TextBox x:Name="EmailTxb" HorizontalAlignment="Left" Height="30" Margin="118,34,0,0" TextWrapping="Wrap" Text="TextBox" Style="{StaticResource ShortTXB}" FontSize="15" VerticalAlignment="Top" Width="164"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="30,36,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="83"/>
        <Button Content="Отправить" HorizontalAlignment="Left" Height="25" Margin="90,89,0,0" VerticalAlignment="Top" Width="105" Click="Button_Click"/>

    </Grid>
</Window>
